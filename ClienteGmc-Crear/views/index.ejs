<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <!--bosicons-->
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <title>CRUD BASICO</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="">Inicio</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/create">Crear U.</a>
          </li>
          <a class="nav-link active" aria-current="page" href="/createEstudiante">Crear E.</a>
        </li>
        <a class="nav-link active" aria-current="page" href="/createMateria">Crear M.</a>
        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="container">
    <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-camera-plus bx-md'></i></a>
    <table class="table table-bordered table-stripped text-center mt-4">
      <thead>
        <tr class="bg-primary text-white">
          <th scope="col">ID</th>
          <th scope="col">USUARIO</th>
          <th scope="col">ROL</th>

          <th scope="col">ACCIONES</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach((usuario)=>{ %>
          <tr>
            <td>
              <%= usuario.id%>
            </td>
            <td>
              <%= usuario.usuario%>
            </td>
            <td>
              <%= usuario.rol%>
            </td>

            <td>
              <a href="/edit/<%= usuario.id%>" class="btn btn-outline-info">editar</a>
              <a href="/deleteUsuario/<%= usuario.id%>" class="btn btn-outline-danger">borrar</a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <a href="/createEstudiante" class="btn btn-outline-primary mt-4"><i class='bx bxs-camera-plus bx-md'></i></a>
    <table class="table table-bordered table-stripped text-center mt-4">
      <thead>
        <tr class="bg-primary text-white">
          <th scope="col">ID</th>
          <th scope="col">USUARIO</th>
          <th scope="col">SEDE</th>

          <th scope="col">ACCIONES</th>

        </tr>
      </thead>
      <tbody>
        <% estudiante.forEach((usuario)=>{ %>
          <tr>
            <td>
              <%= usuario.id%>
            </td>
            <td>
              <%= usuario.usuario%>
            </td>
            <td>
              <%= usuario.sede%>
            </td>
            <td>
              <a href="/editEstudiante/<%= usuario.id%>" class="btn btn-outline-info">editar</a>
              <a href="/delete/<%= usuario.id%>" class="btn btn-outline-danger">borrar</a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <a href="/createMateria" class="btn btn-outline-primary mt-4"><i class='bx bxs-camera-plus bx-md'></i></a>
    <table class="table table-bordered table-stripped text-center mt-4">
      <thead>
        <tr class="bg-primary text-white">
          <th scope="col">ID</th>
          <th scope="col">MATERIA</th>
          <th scope="col">PROGRAMA</th>

          <th scope="col">ACCIONES</th>

        </tr>
      </thead>
      <tbody>
        <% materia.forEach((materia)=>{ %>
          <tr>
            <td>
              <%= materia.id%>
            </td>
            <td>
              <%= materia.materia%>
            </td>
            <td>
              <%= materia.programa%>
            </td>
            <td>
              <a href="/editMateria/<%= materia.id%>" class="btn btn-outline-info">editar</a>
              <a href="/deleteMateria/<%= materia.id%>" class="btn btn-outline-danger">borrar</a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
  


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
  crossorigin="anonymous"></script>
  
  
  </body>
  
  </html>